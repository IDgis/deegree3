<!--
    found in the ${basedir}/scripts/build/ivy/ivy.properties
    module.organisation = org.deegree    
    module.name = ${ant.project.name}
    jar.name=deegree-${module.name}-${module.version.prefix}
    javadoc.name=${jar.name}-javadoc
    src.name=${jar.name}-src
-->
<ivy-module version="1.0">
    <info organisation="${module.organisation}" module="${module.name}" />
    <configurations>
      <!-- include file="${core.dir}/ivy.xml" /-->
      <conf name="${module.name}-build" description="Use core+services jars and dependent jars" />
      <conf name="${module.name}-javadoc" description="The source" visibility="private" />      
      <conf name="${module.name}-src" description="The sources" visibility="private" />
      <conf name="${module.name}-report" description="The report" visibility="private" />  
      <conf name="${module.name}-deployservices" description="The deployment of services" visibility="private" />    
    </configurations>
    <publications>
      <artifact name="${jar.name}" type="jar" conf="${module.name}-build" ext="jar"/>
      <artifact name="${javadoc.name}" type="zip" conf="${module.name}-javadoc" />      
      <artifact name="${src.name}" type="zip" conf="${module.name}-src" />
      <artifact name="${report.name}" type="html" conf="${module.name}-report" />
      <artifact name="${war.name}" type="war" conf="${module.name}-deployservices" />
    </publications>   
    <dependencies defaultconfmapping="${module.name}-build->default">
        <dependency org="${module.organisation}" name="tools" rev="latest.integration" transitive="true" conf="${module.name}-build->tools-build"/>
        <dependency org="${module.organisation}" name="services" rev="latest.integration" transitive="true" conf="${module.name}-deployservices->services-build"/>

        <dependency org="junit" name="junit" rev="4.+" transitive="false" conf="${module.name}-build" />

	    <dependency org="jfreechart" name="jfreechart" rev="1.0.13" transitive="false" conf="${module.name}-build" />

		<dependency org="jfreechart" name="jcommon" rev="1.0.16" transitive="false" conf="${module.name}-build" />
  
        <dependency org="cite" name="teamengine" rev="SNAPSHOT" transitive="false" conf="${module.name}-build" />
        
    </dependencies>        
</ivy-module>
