<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.deegree</groupId>
  <artifactId>deegree</artifactId>
  <packaging>pom</packaging>
  <version>3.1-pre4-SNAPSHOT</version>
  <name>deegree</name>
  <url>http://www.deegree.org</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.wald.intevation.org/deegree/deegree3/branches/3.1-pre4</developerConnection>
    <url>svn+ssh://svn.wald.intevation.org/deegree/deegree3/branches/3.1-pre4</url>
  </scm>

  <repositories>
    <repository>
      <id>deegree-repo</id>
      <url>http://artefacts.deegree.org/repo</url>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>deegree-releases</id>
      <url>http://artefacts.deegree.org/libs-releases-local</url>
    </repository>
    <snapshotRepository>
      <id>deegree-snapshots</id>
      <url>http://artefacts.deegree.org/libs-snapshots-local</url>
    </snapshotRepository>
  </distributionManagement>

  <pluginRepositories>
    <pluginRepository>
      <id>deegree-plugin-repo</id>
      <url>http://artefacts.deegree.org/repo</url>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.1</version>
        <configuration>
           <preparationGoals>clean install</preparationGoals>
           <tagBase>svn+ssh://svn.wald.intevation.org/deegree/deegree3/tags</tagBase>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>deegree-misc/deegree-parent</module>
    <module>deegree-services/deegree-services-parent</module>
    <module>deegree-services/deegree-stable-service-parent</module>
    <module>deegree-services/deegree-tomcat-parent</module>
    <module>deegree-tools/deegree-tools-parent</module>
    <module>deegree-client</module>
    <module>deegree-core</module>
    <module>deegree-datastores</module>
    <module>deegree-misc</module>
    <module>deegree-processproviders</module>
    <module>deegree-services</module>
    <module>deegree-tools</module>
    <module>deegree-workspaces</module>
  </modules>
</project>

