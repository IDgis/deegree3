<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.deegree</groupId>
  <artifactId>deegree-webservices</artifactId>
  <packaging>war</packaging>
  <version>3.1-pre4-SNAPSHOT</version>
  <name>deegree webservices</name>
  <url>http://www.deegree.org</url>

  <scm>
    <developerConnection>scm:svn:svn+ssh://svn.wald.intevation.org/deegree/deegree3/branches/3.1-pre4/deegree-services/deegree-webservices</developerConnection>
    <url>svn+ssh://svn.wald.intevation.org/deegree/deegree3/branches/3.1-pre4/deegree-services/deegree-webservices</url>
  </scm>

  <parent>
    <groupId>org.deegree</groupId>
    <artifactId>deegree-tomcat-parent</artifactId>
    <version>3.1-pre4-SNAPSHOT</version>
  </parent>

  <repositories>
    <repository>
      <id>deegree-repo</id>
      <url>http://artefacts.deegree.org/repo</url>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.deegree</groupId>
        <artifactId>deegree-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <files>
                <file>
                  <from>src/main/tomcat/tomcat-users.xml</from>
                  <to>target/tomcat/conf/tomcat-users.xml</to>
                </file>
              </files>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-jsf-console</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-services-config</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-services-wms</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-services-wfs</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-services-csw</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-featurestore-memory</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-featurestore-postgis</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-featurestore-shape</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-featurestore-simplesql</artifactId>
      <version>3.1-pre4-SNAPSHOT</version>
    </dependency>
  </dependencies>

</project>
