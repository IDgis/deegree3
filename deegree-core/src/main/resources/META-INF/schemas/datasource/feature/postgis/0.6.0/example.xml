<PostGISFeatureStore configVersion="0.6.0" xmlns="http://www.deegree.org/datasource/feature/postgis"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.deegree.org/datasource/feature/postgis http://schemas.deegree.org/datasource/feature/postgis/0.6.0/postgis.xsd">

  <!-- [0...n] Namespace bindings to be used-->
  <NamespaceHint namespaceURI="app" prefix="http://www.deegree.org/app"/>

  <!-- [1] CRS for storing geometries -->
  <StorageCRS>EPSG:4326</StorageCRS>

  <!-- [1] Identifier of JDBC connection -->
  <JDBCConnId>postgis</JDBCConnId>

  <!-- [1...n] GML schema files / directory to be used -->
  <GMLSchemaFileURL gmlVersion="GML_32">...</GMLSchemaFileURL>

</PostGISFeatureStore>